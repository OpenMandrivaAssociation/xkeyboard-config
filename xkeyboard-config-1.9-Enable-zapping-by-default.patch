Subject: [PATCH] Enable zapping by default

---
 rules/base.m_s.part  |    1 +
 rules/evdev.m_s.part |    2 +-
 2 files changed, 2 insertions(+), 1 deletions(-)

diff -p -up ./rules/base.m_s.part.enable-zapping ./rules/base.m_s.part
--- ./rules/base.m_s.part.enable-zapping	2010-04-23 00:07:20.000000000 +0200
+++ ./rules/base.m_s.part	2010-07-25 10:56:58.000000000 +0200
@@ -49,3 +49,4 @@
   $maclaptop    =       +inet(apple)+level3(enter_switch)
   $applealu     =       +inet(apple)
   $macs	        =       +inet(apple)
+  *             =       +terminate(ctrl_alt_bksp)
diff -p -up ./rules/evdev.m_s.part.enable-zapping ./rules/evdev.m_s.part
--- ./rules/evdev.m_s.part.enable-zapping	2010-03-27 02:35:10.000000000 +0100
+++ ./rules/evdev.m_s.part	2010-07-25 10:57:17.000000000 +0200
@@ -1,3 +1,3 @@
   $evdevkbds    =   +inet(evdev)+inet(%m)
   applealu_jis  =   +inet(evdev)+macintosh_vndr/jp(alujiskeys)
-  *             =   +inet(evdev)
+  *             =   +inet(evdev)+terminate(ctrl_alt_bksp)
